        <recommendedCipherSuites>TLS_ECDHE_ECDSA_WITH_AES_256_CCM</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDHE_RSA_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDHE_RSA_WITH_AES_256_CBC_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_DSS_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_DSS_WITH_AES_256_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_DSS_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_DSS_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_RSA_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_RSA_WITH_AES_256_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_RSA_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_RSA_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_RSA_WITH_AES_128_CCM</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_RSA_WITH_AES_256_CCM</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_ECDSA_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_ECDSA_WITH_AES_256_CBC_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_ECDSA_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_ECDSA_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_RSA_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_RSA_WITH_AES_256_CBC_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_RSA_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDH_RSA_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_DSS_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_DSS_WITH_AES_256_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_DSS_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_DSS_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_RSA_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_RSA_WITH_AES_256_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_RSA_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DH_RSA_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDHE_PSK_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_ECDHE_PSK_WITH_AES_256_CBC_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_PSK_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_PSK_WITH_AES_256_CBC_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_PSK_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_PSK_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_PSK_WITH_AES_128_CCM</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_DHE_PSK_WITH_AES_256_CCM</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_RSA_PSK_WITH_AES_128_CBC_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_RSA_PSK_WITH_AES_256_CBC_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_RSA_PSK_WITH_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_RSA_PSK_WITH_AES_256_GCM_SHA384</recommendedCipherSuites>
    </cipherSuiteGuidelineCheck>
    <namedGroupsGuidelineCheck>
        <name>Die folgenden Diffie-Hellman Gruppen werden empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <recommendedGroups>SECP256R1</recommendedGroups>
        <recommendedGroups>SECP384R1</recommendedGroups>
        <recommendedGroups>SECP521R1</recommendedGroups>
        <recommendedGroups>BRAINPOOLP256R1</recommendedGroups>
        <recommendedGroups>BRAINPOOLP384R1</recommendedGroups>
        <recommendedGroups>BRAINPOOLP512R1</recommendedGroups>
        <recommendedGroups>FFDHE2048</recommendedGroups>
        <recommendedGroups>FFDHE3072</recommendedGroups>
        <recommendedGroups>FFDHE4096</recommendedGroups>
        <tls13>false</tls13>
        <minGroupCount>2</minGroupCount>
    </namedGroupsGuidelineCheck>
    <signatureAlgorithmsGuidelineCheck>
        <name>Die folgenden Signaturverfahren werden empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <recommendedAlgorithms>RSA_PKCS1</recommendedAlgorithms>
        <recommendedAlgorithms>DSA</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA</recommendedAlgorithms>
    </signatureAlgorithmsGuidelineCheck>
    <hashAlgorithmsGuidelineCheck>
        <name>Die folgenden Hashfunktionen werden empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <recommendedAlgorithms>SHA256</recommendedAlgorithms>
        <recommendedAlgorithms>SHA384</recommendedAlgorithms>
        <recommendedAlgorithms>SHA512</recommendedAlgorithms>
    </hashAlgorithmsGuidelineCheck>
    <analyzedPropertyGuidelineCheck>
        <name>Es wird empfohlen Session Renegotiation nur auf Basis von [RFC5746] zu verwenden. Durch den Client initiierte Renegotiation sollte vom Server abgelehnt werden.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <property>SUPPORTS_SECURE_RENEGOTIATION_EXTENSION</property>
        <result>TRUE</result>
    </analyzedPropertyGuidelineCheck>
    <analyzedPropertyGuidelineCheck>
        <name>Es wird empfohlen Session Renegotiation nur auf Basis von [RFC5746] zu verwenden. Durch den Client initiierte Renegotiation sollte vom Server abgelehnt werden.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <property>SUPPORTS_CLIENT_SIDE_SECURE_RENEGOTIATION_EXTENSION</property>
        <result>FALSE</result>
    </analyzedPropertyGuidelineCheck>
    <analyzedPropertyGuidelineCheck>
        <name>Es wird empfohlen Session Renegotiation nur auf Basis von [RFC5746] zu verwenden. Durch den Client initiierte Renegotiation sollte vom Server abgelehnt werden.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <property>SUPPORTS_CLIENT_SIDE_INSECURE_RENEGOTIATION</property>
        <result>FALSE</result>
    </analyzedPropertyGuidelineCheck>
    <extensionGuidelineCheck>
        <name>truncated_hmac sollte nicht unterstüzt werden.</name>
        <requirementLevel>SHOULD_NOT</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <requiredExtension>TRUNCATED_HMAC</requiredExtension>
    </extensionGuidelineCheck>
    <analyzedPropertyGuidelineCheck>
        <name>Es wird empfohlen die TLS-Datenkompression nicht zu verwenden.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <property>SUPPORTS_TLS_COMPRESSION</property>
        <result>FALSE</result>
    </analyzedPropertyGuidelineCheck>
    <analyzedPropertyGuidelineCheck>
        <name>Der Einsatz der TLS-Erweiterung „Encrypt-then-MAC“ gemäß [RFC7366] wird empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <property>SUPPORTS_ENCRYPT_THEN_MAC</property>
        <result>TRUE</result>
    </analyzedPropertyGuidelineCheck>
    <extensionGuidelineCheck>
        <name>Heartbeat sollte nicht unterstüzt werden.</name>
        <requirementLevel>SHOULD_NOT</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <requiredExtension>HEARTBEAT</requiredExtension>
    </extensionGuidelineCheck>
    <analyzedPropertyGuidelineCheck>
        <name>Der Einsatz der TLS-Erweiterung Extended Master Secret gemäß [RFC7627] wird empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
        </condition>
        <property>SUPPORTS_EXTENDED_MASTER_SECRET</property>
        <result>TRUE</result>
    </analyzedPropertyGuidelineCheck>
    <analyzedPropertyGuidelineCheck>
        <name>Das Senden oder Annehmen von 0-RTT Daten wird nicht empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_3</property>
            <result>TRUE</result>
        </condition>
        <property>SUPPORTS_TLS13_0_RTT</property>
        <result>FALSE</result>
    </analyzedPropertyGuidelineCheck>
    <namedGroupsGuidelineCheck>
        <name>Die folgenden Diffie-Hellman Gruppen werden empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <recommendedGroups>SECP256R1</recommendedGroups>
        <recommendedGroups>SECP384R1</recommendedGroups>
        <recommendedGroups>SECP521R1</recommendedGroups>
        <recommendedGroups>BRAINPOOLP256R1</recommendedGroups>
        <recommendedGroups>BRAINPOOLP384R1</recommendedGroups>
        <recommendedGroups>BRAINPOOLP512R1</recommendedGroups>
        <recommendedGroups>FFDHE2048</recommendedGroups>
        <recommendedGroups>FFDHE3072</recommendedGroups>
        <recommendedGroups>FFDHE4096</recommendedGroups>
        <tls13>true</tls13>
        <minGroupCount>2</minGroupCount>
    </namedGroupsGuidelineCheck>
    <signatureAndHashAlgorithmsGuidelineCheck>
        <name>Die folgenden Signaturverfahren werden empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_3</property>
            <result>TRUE</result>
        </condition>
        <recommendedAlgorithms>RSA_PSS_RSAE_SHA256</recommendedAlgorithms>
        <recommendedAlgorithms>RSA_PSS_RSAE_SHA384</recommendedAlgorithms>
        <recommendedAlgorithms>RSA_PSS_RSAE_SHA512</recommendedAlgorithms>
        <recommendedAlgorithms>RSA_PSS_PSS_SHA256</recommendedAlgorithms>
        <recommendedAlgorithms>RSA_PSS_PSS_SHA384</recommendedAlgorithms>
        <recommendedAlgorithms>RSA_PSS_PSS_SHA512</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_SHA256</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_SHA384</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_SHA512</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_BRAINPOOL_P256R1_TLS13_SHA256</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_BRAINPOOL_P384R1_TLS13_SHA384</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_BRAINPOOL_P512R1_TLS13_SHA512</recommendedAlgorithms>
        <tls13>true</tls13>
    </signatureAndHashAlgorithmsGuidelineCheck>
    <signatureAndHashAlgorithmsCertificateGuidelineCheck>
        <name>Die folgenden Signaturverfahren werden empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <condition>
            <property>SUPPORTS_TLS_1_3</property>
            <result>TRUE</result>
        </condition>
        <recommendedAlgorithms>SHA256_WITH_RSA_ENCRYPTION</recommendedAlgorithms>
        <recommendedAlgorithms>SHA384_WITH_RSA_ENCRYPTION</recommendedAlgorithms>
        <recommendedAlgorithms>SHA512_WITH_RSA_ENCRYPTION</recommendedAlgorithms>
        <recommendedAlgorithms>RSASSA_PSS</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_WITH_SHA256</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_WITH_SHA384</recommendedAlgorithms>
        <recommendedAlgorithms>ECDSA_WITH_SHA512</recommendedAlgorithms>
    </signatureAndHashAlgorithmsCertificateGuidelineCheck>
    <cipherSuiteGuidelineCheck>
        <name>Die folgenden Cipher-Suiten werden empfohlen.</name>
        <requirementLevel>SHOULD</requirementLevel>
        <versions>TLS13</versions>
        <recommendedCipherSuites>TLS_AES_128_GCM_SHA256</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_AES_256_GCM_SHA384</recommendedCipherSuites>
        <recommendedCipherSuites>TLS_AES_128_CCM_SHA256</recommendedCipherSuites>
    </cipherSuiteGuidelineCheck>
    <keySizeCertGuidelineCheck>
        <name>Schlüssellängen</name>
        <requirementLevel>SHOULD</requirementLevel>
        <atLeastOneCertificateShallPass>false</atLeastOneCertificateShallPass>
        <minimumDsaKeyLength>2000</minimumDsaKeyLength>
        <minimumRsaKeyLength>2000</minimumRsaKeyLength>
        <minimumEcKeyLength>250</minimumEcKeyLength>
        <minimumDhKeyLength>2000</minimumDhKeyLength>
    </keySizeCertGuidelineCheck>
</guideline>
